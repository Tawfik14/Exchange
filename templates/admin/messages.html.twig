{% extends 'base.html.twig' %}
{% block title %}Admin - Messages{% endblock %}
{% block body %}
<div style="max-width: 1000px; margin: 2rem auto;">
  <h1>Messages de contact</h1>
  <table style="width:100%;border-collapse:collapse;border:1px solid var(--border);">
    <thead><tr><th style="padding:10px;text-align:left;">Date</th><th style="padding:10px;text-align:left;">Nom</th><th style="padding:10px;text-align:left;">Email</th><th style="padding:10px;text-align:left;">Message</th></tr></thead>
    <tbody>
    {% for r in rows %}
      <tr style="border-top:1px solid var(--border);">
        <td style="padding:10px;">{{ r.ts }}</td>
        <td style="padding:10px;">{{ r.name }}</td>
        <td style="padding:10px;">{{ r.email }}</td>
        <td style="padding:10px; white-space: pre-wrap;">{{ r.message }}</td>
      </tr>
    {% else %}
      <tr><td colspan="4" style="padding:10px;color:#93a1c6;">Aucun message.</td></tr>
    {% endfor %}
    </tbody>
  </table>
</div>
{% endblock %}

